<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seros The Rookie</title>
    <style>
        body { background: #121212; color: #fff; font-family: Arial, sans-serif; margin: 0; padding: 0; }
        header { padding: 20px; text-align: center; background: #1e1e1e; font-size: 24px; font-weight: bold; }
        #player { width: 100%; max-width: 900px; margin: 20px auto; display: block; aspect-ratio: 16/9; border: none; }
        .season { padding: 20px; }
        .season h2 { color: #ffcc00; margin-bottom: 10px; }
        .episodes { display: grid; grid-template-columns: repeat(auto-fill, minmax(150px, 1fr)); gap: 10px; }
        .episode { background: #1e1e1e; padding: 10px; border-radius: 8px; cursor: pointer; text-align: center; transition: 0.2s; }
        .episode:hover { background: #333; }
        .episode img { width: 100%; border-radius: 8px; }
        .episode-title { margin-top: 8px; font-size: 14px; }
    </style>
</head>
<body>
    <header>Seros The Rookie - Všechny série</header>

    <iframe id="player" src="https://www.youtube.com/embed/dQw4w9WgXcQ" allowfullscreen></iframe>

    <div id="content"></div>

    <script>
        const seriesCount = 7;
        const episodesPerSeries = 20;
        const contentDiv = document.getElementById('content');
        const player = document.getElementById('player');

        for (let s = 1; s <= seriesCount; s++) {
            let seasonDiv = document.createElement('div');
            seasonDiv.classList.add('season');
            seasonDiv.innerHTML = `<h2>Série ${s}</h2>`;
            let episodesDiv = document.createElement('div');
            episodesDiv.classList.add('episodes');
            for (let e = 1; e <= episodesPerSeries; e++) {
                let episodeDiv = document.createElement('div');
                episodeDiv.classList.add('episode');
                episodeDiv.innerHTML = `
                    <img src="https://via.placeholder.com/150x90?text=Ep+${e}" alt="Epizoda ${e}">
                    <div class="episode-title">Epizoda ${e}</div>
                `;
                episodeDiv.addEventListener('click', () => {
                    player.src = "https://www.youtube.com/embed/dQw4w9WgXcQ";
                });
                episodesDiv.appendChild(episodeDiv);
            }
            seasonDiv.appendChild(episodesDiv);
            contentDiv.appendChild(seasonDiv);
        }
    </script>
</body>
</html>
